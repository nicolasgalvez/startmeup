<div class="{{ block.classes|join(' ') }} lg:max-w-reading mx-4 lg:mx-auto">
    {% if block.attributes.providerNameSlug ==  'vimeo' %}
        {% set vimeo_url = block.attributes.url|replace({'vimeo.com':'player.vimeo.com/video'}) %}
        {{ block.content }}

    {% elseif block.attributes.providerNameSlug == 'youtube' %}
        {% set youtube_url = block.attributes.url|replace({'https://youtu.be/':'https://www.youtube.com/embed/'}) %}
        <div class="max-w-video">
            <div class="video-responsive">
                <iframe src="{{ youtube_url }}" title="YouTube video player" frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen></iframe>
            </div>
        </div>
    {% else %}
        {{ block.content }}
    {% endif %}
</div>
